interface {{ libvirt.name }}
{
	AdvSendAdvert on;
	IgnoreIfMissing on;
        AdvManagedFlag on;

	MinRtrAdvInterval 3;
	MaxRtrAdvInterval 10;

	AdvDefaultPreference low;
        AdvDefaultLifetime 9000;

	AdvHomeAgentFlag off;

	prefix {{ libvirt.cidr6 }}
	{
		AdvOnLink on;
		AdvAutonomous on;
#		AdvAutonomous off;
		AdvRouterAddr on;
	};

	route ::/0
	{
		AdvRoutePreference low;
		AdvRouteLifetime 9000;
                RemoveRoute on;
	};

};
